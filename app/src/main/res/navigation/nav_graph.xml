<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.mobileapp.fishmatch.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.mobileapp.fishmatch.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <argument
            android:name="difficulty"
            app:argType="integer"
            android:defaultValue="1" />
        <action
            android:id="@+id/action_gameFragment_to_winFragment"
            app:destination="@id/winFragment" />
        <action
            android:id="@+id/action_gameFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mobileapp.fishmatch.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/statsFragment"
        android:name="com.mobileapp.fishmatch.StatsFragment"
        android:label="fragment_stats"
        tools:layout="@layout/fragment_stats" />
    <fragment
        android:id="@+id/winFragment"
        android:name="com.mobileapp.fishmatch.WinFragment"
        android:label="fragment_win"
        tools:layout="@layout/fragment_win" >
        <action
            android:id="@+id/action_winFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <argument
            android:name="gameTime"
            app:argType="long" />
        <argument
            android:name="movesTaken"
            app:argType="integer" />
        <argument
            android:name="pointsEarned"
            app:argType="integer" />
        <argument
            android:name="timeHighScore"
            app:argType="boolean" />
        <argument
            android:name="movesHighScore"
            app:argType="boolean" />
    </fragment>
</navigation>